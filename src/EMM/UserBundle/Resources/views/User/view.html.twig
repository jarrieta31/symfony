{% extends 'layout.html.twig' %}

{% block body %}
	{{ parent() }}

	<div class="container well">
		<div class="col-md-9">
			<h2>{{ user.firstName }} {{ user.lastName }}</h2>

			<dl>
				<dt>{{ 'Username'|trans }}</dt>
				<dd>{{ user.username }} &nbsp;</dd>
				<br>
				<dt>{{ 'First name'|trans }}</dt>
				<dd>{{ user.firstName }} &nbsp;</dd>
				<br>
				<dt>{{ 'Last name'|trans }}</dt>
				<dd>{{ user.lastName }} &nbsp;</dd>
				<br>
				<dt>{{ 'Email'|trans }}</dt>
				<dd>{{ user.email }} &nbsp;</dd>
				<br>
				<dt>{{ 'Role'|trans }}</dt>
				<dd>
					{% if user.role == 'ROLE_ADMIN' %}

						{{ 'Administrator'|trans }} &nbsp;

					{% elseif user.role == 'ROLE_USER' %}

						{{ 'User'|trans }} &nbsp;

					{% endif %}
				</dd>
				<br>
				<dt>{{ 'Active'|trans }}</dt>
				<dd>
					{% if user.isActive == 1 %}

						<span class="text-success">{{ 'Enable'|trans }}</span>

					{% elseif user.isActive == 0 %}

						<span class="text-warning">{{ 'Disabled'|trans }}</span>

					{% endif %}
				</dd>
				<br>
				<dt>{{ 'Created'|trans }}</dt>
				<dd>{{ user.createdAt|date('d/m/Y H:i') }}</dd>
				<br>
				<br>
				<dt>{{ 'Updated'|trans }}</dt>
				<dd>{{ user.updatedAt|date('d/m/Y H:i') }}</dd>
			</dl>
		</div>
		<div class="col-md-3">
			<h3>{{ 'Actions'|trans }}</h3>
			<p>
				<a href="{{ path('emm_user_edit', { id:user.id }) }}" class="btn btn-lg btn-primary btn-block">
					<span class="glyphicon glyphicon-edit"></span>
					{{ 'Edit user'|trans}}
				</a>
			</p>
			<p>
				{{ include('EMMUserBundle:User:forms/form.html.twig', { form: delete_form, message: 'Are you sure ?'|trans}) }}
			</p>
		</div>
	</div>

{% endblock %}